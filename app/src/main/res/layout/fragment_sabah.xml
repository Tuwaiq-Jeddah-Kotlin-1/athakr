<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/counterscreen"
    android:background="@drawable/background"
    tools:context=".ui.main.fragment.Sabah.ui.SabahFragment">


    <TextView
        android:id="@+id/athakerkind"
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_above="@+id/incrementtext"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="17dp"
        android:gravity="center_horizontal"
        android:textColor="@color/Tiffany"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/incrementtext"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/Tiffany"
        android:textSize="85sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/incrementtext"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إعادة"
            android:textColor="@color/Tiffany"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_above="@+id/athakerkind"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="320dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-89dp"
        android:src="@drawable/sabah" />


</RelativeLayout>