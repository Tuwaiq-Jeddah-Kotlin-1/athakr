<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.HomeFragment">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layoutDirection="rtl"
            android:padding="20dp"
            tools:context=".ui.main.fragment.MainFragment"
            tools:ignore="HardcodedText">


            <ImageView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guideline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <Button
                android:id="@+id/athakarButtom"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="الأذكار"
                app:layout_constraintEnd_toStartOf="@+id/home_guideline"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <Button
                android:id="@+id/nameofButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="اسماء الله الحسني"
                app:layout_constraintBottom_toBottomOf="@+id/qiblaButton"
                app:layout_constraintEnd_toEndOf="@+id/quranButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/quranButton"
                app:layout_constraintTop_toTopOf="@+id/qiblaButton"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/prayerTimeButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:paddingBottom="20dp"
                android:text="اوقات الصلاة "
                app:layout_constraintBottom_toBottomOf="@+id/OmrahButton"
                app:layout_constraintEnd_toEndOf="@+id/nameofButton"
                app:layout_constraintStart_toStartOf="@+id/nameofButton"
                app:layout_constraintTop_toTopOf="@+id/OmrahButton" />

            <Button
                android:id="@+id/quranButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="القرآن الكريم"
                app:layout_constraintBottom_toBottomOf="@+id/athakarButtom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/home_guideline"
                app:layout_constraintTop_toTopOf="@+id/athakarButtom" />

            <Button
                android:id="@+id/calenderButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="التقويم الهجري"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/OmrahButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/OmrahButton"
                app:layout_constraintTop_toBottomOf="@+id/OmrahButton" />

            <Button
                android:id="@+id/qiblaButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="القبلة"
                app:layout_constraintEnd_toEndOf="@+id/athakarButtom"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/athakarButtom"
                app:layout_constraintTop_toBottomOf="@+id/athakarButtom" />

            <Button
                android:id="@+id/misbahaButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="اقرب مسجد"
                app:layout_constraintBottom_toBottomOf="@+id/calenderButton"
                app:layout_constraintEnd_toEndOf="@+id/prayerTimeButton"
                app:layout_constraintStart_toStartOf="@+id/prayerTimeButton"
                app:layout_constraintTop_toTopOf="@+id/calenderButton" />

            <Button
                android:id="@+id/OmrahButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/main_btn_bg"
                android:fontFamily="@font/home"
                android:text="الحج و العمرة"
                app:layout_constraintEnd_toEndOf="@+id/qiblaButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/qiblaButton"
                app:layout_constraintTop_toBottomOf="@+id/qiblaButton" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    </RelativeLayout>
