<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layoutDirection="rtl"
            android:padding="20dp"
            tools:context=".ui.main.fragment.MainFragment"
            tools:ignore="HardcodedText">


            <ImageView
                android:id="@+id/textView7"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guideline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <Button
                android:id="@+id/athakarButtom"
                android:layout_width="277dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/no_btn"
                android:fontFamily="@font/quran_font"
                android:text="@string/Alazakar"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="236dp"
                android:layout_height="104dp"
                android:layout_marginBottom="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.445"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.739"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/start">

            </com.airbnb.lottie.LottieAnimationView>

            <Button
                android:id="@+id/calenderButton"
                android:layout_width="277dp"
                android:layout_height="130dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/no_btn"
                android:fontFamily="@font/quran_font"
                android:text="@string/Hijricalendar"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/athakarButtom" />

            <Button
                android:id="@+id/qiblaButton"
                android:layout_width="277dp"
                android:layout_height="130dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/no_btn"
                android:fontFamily="@font/quran_font"
                android:text="@string/Qibla"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calenderButton"
                app:layout_constraintVertical_bias="0.2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</RelativeLayout>
